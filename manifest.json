{
    "manifest_version": 3,
    "name": "AutoPIPer",
    "description": "Automatically enables Picture-in-Picture for YouTube videos when switching tabs.",
    "version": "1.0.0",
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "permissions": [
      "tabs",
      "scripting",
      "activeTab"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://www.youtube.com/watch*"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_title": "AutoPIPer"
    }
  }